<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    android:layout_margin="8dp"
    android:padding="5dp"
    app:cardElevation="3dp"
    android:background="@android:color/white"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="175dp">
            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
            <com.code.hacks.codered.evnts.evnts.views.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="#A0000000"
                android:layout_gravity="bottom|end"
                android:textSize="15sp"
                android:padding="10dp"
                android:text="@string/free"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/event_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp">

            <com.code.hacks.codered.evnts.evnts.views.CustomTextViewBold
                android:id="@+id/event_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:id="@+id/event_location_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_name">
                    <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location" />
                    <com.code.hacks.codered.evnts.evnts.views.CustomTextView
                        android:id="@+id/event_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/primary_text_light"
                        android:text="@string/no_location"
                        android:layout_gravity="center_vertical"
                        android:textStyle="italic"
                        android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/event_date_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_location_layout">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date" />
                <com.code.hacks.codered.evnts.evnts.views.CustomTextView
                    android:id="@+id/event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/primary_text_light"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>
        <com.code.hacks.codered.evnts.evnts.views.CustomButton
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_card" android:layout_below="@id/event_info"
            android:layout_alignLeft="@id/event_info" android:layout_marginLeft="5dp"
            android:text="@string/more_details" android:textColor="@color/base"
            android:textSize="13sp" android:layout_marginBottom="5dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>